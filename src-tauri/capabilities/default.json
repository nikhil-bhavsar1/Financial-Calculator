{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "dialog:allow-open",
        "shell:allow-open",
        "shell:allow-spawn",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "python3",
                    "cmd": "python3",
                    "args": true
                },
                {
                    "name": "api-server",
                    "cmd": "api-server",
                    "args": true
                }
            ]
        }
    ]
}