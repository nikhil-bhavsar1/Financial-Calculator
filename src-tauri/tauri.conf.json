{
    "identifier": "com.yourcompany.yourapp",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Financial Calculator",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                "main_capabilities"
            ],
            "assetProtocol": {
                "enable": true,
                "scope": [
                    "**"
                ]
            }
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png"
        ],
        "resources": [
            "python/ollama_service.py"
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "fs": {}
    }
}